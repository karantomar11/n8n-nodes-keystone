{
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "target": "es2019",
        "lib": [
            "es2019"
        ],
        "declaration": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": ".",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "nodes/**/*",
        "credentials/**/*"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}